@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>Quản lý người dùng</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Ngày tạo</th>
                <th>Vai trò</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">User</span>
                        }
                    </td>
                    <td>
                        @if (!User.IsInRole("Admin"))
                        {
                            <form method="post" action="@Url.Action("MakeAdmin", new { userId = user.Id })" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Cấp quyền Admin?')">
                                    <i class="fas fa-user-shield"></i> Cấp Admin
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" action="@Url.Action("RemoveAdmin", new { userId = user.Id })" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Gỡ quyền Admin?')">
                                    <i class="fas fa-user-minus"></i> Gỡ Admin
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>