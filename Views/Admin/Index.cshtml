@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5>Tổng người dùng</h5>
                    <h2>@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5>Tổng sản phẩm</h5>
                    <h2>@Model.TotalProducts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5>Tổng đơn hàng</h5>
                    <h2>@Model.TotalOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5>Doanh thu</h5>
                    <h2>@Model.TotalRevenue.ToString("C0")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>Quản lý hệ thống</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="@Url.Action("Products")" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="fas fa-box"></i><br>Quản lý sản phẩm
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Categories")" class="btn btn-success btn-lg w-100 mb-3">
                                <i class="fas fa-tags"></i><br>Quản lý danh mục
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Orders")" class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-shopping-cart"></i><br>Quản lý đơn hàng
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Users")" class="btn btn-info btn-lg w-100 mb-3">
                                <i class="fas fa-users"></i><br>Quản lý người dùng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>