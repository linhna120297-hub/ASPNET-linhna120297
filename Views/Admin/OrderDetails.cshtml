@model Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Chi tiết đơn hàng #@Model.Id</h2>
    <a href="@Url.Action("Orders")" class="btn btn-secondary">Quay lại</a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin khách hàng</h5>
            </div>
            <div class="card-body">
                <p><strong>Email:</strong> @Model.User.Email</p>
                <p><strong>Họ tên:</strong> @Model.ShippingAddress</p>
                <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Tổng kết đơn hàng</h5>
            </div>
            <div class="card-body">
                <p><strong>Số sản phẩm:</strong> @Model.OrderItems.Count</p>
                <p><strong>Tổng số lượng:</strong> @Model.OrderItems.Sum(oi => oi.Quantity)</p>
                <p><strong>Tổng tiền:</strong> @Model.TotalAmount.ToString("C0")</p>
            </div>
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h5>Sản phẩm trong đơn hàng</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Price.ToString("C0")</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Price * item.Quantity).ToString("C0"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>